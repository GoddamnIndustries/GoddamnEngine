using System.IO;
using GoddamnEngine.BuildSystem;

public sealed class GoddamnGraphicsOpenGLProject : Project
{
    public override string GetFilter()
    {
        return "Graphics";
    }

    public override ProjectBuildType GetBuildType(TargetPlatform platform, TargetConfiguration configuration)
    {
        return ProjectBuildType.StaticLibrary;
    }

    public sealed override ProjectPriority GetPriority()
    {
        return ProjectPriority.PluginLevel;
    }

    public sealed override string GetSourceFiltersOrigin()
    {
        return Path.Combine(base.GetSourceFiltersOrigin(), "Core", "System", "Graphics");
    }
}   // class GoddamnCoreProject
